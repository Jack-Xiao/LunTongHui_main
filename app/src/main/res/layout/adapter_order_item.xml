<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    card_view:cardCornerRadius="5dp">

    <RelativeLayout
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_sn" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/order_sn_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="20150112200"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_date" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/order_date_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2015/06/30"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_pay" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/order_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="1234.00"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/look_over"
                android:text="@string/look_over"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="@drawable/order_btn_background"/>
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>