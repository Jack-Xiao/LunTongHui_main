        android:id="@+id/goods_img"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_width="@dimen/goods_list_image_width"
        android:layout_height="@dimen/goods_list_image_width"
        fresco:placeholderImage="@drawable/category_default_image"
        fresco:failureImage="@drawable/category_default_image"
        tools:src="@drawable/produce_demo"
        android:background="@drawable/base_frame"
        />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingRight="15dp"
            tools:text="国米牌700实心外胎(黑黑黑黑)国米牌700实心外胎国米牌700实心外胎国米牌700实心外胎国米牌700实心外胎" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:textSize="16sp"
                android:textColor="@color/next_step"
                android:id="@+id/shop_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="11123.00/件"
                android:drawablePadding="2dp"
                android:drawableRight="@drawable/category_menoy_icon" />

            <TextView
                android:id="@+id/market_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:paddingTop="2dp"
                tools:text="25.00" />


            <TextView
                android:visibility="gone"
                android:textSize="14sp"
                android:id="@+id/service_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                tools:text="服务费:25.00" />
        </LinearLayout>

        <Button
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@drawable/panic_buying_green_background"
            android:id="@+id/fast_buy"
            android:text="@string/set_alarm_clock"
            android:layout_alignParentRight="true"
            android:layout_width="80dp"
            android:layout_height="30dp" />
    </RelativeLayout>

<!--        <ImageButton
