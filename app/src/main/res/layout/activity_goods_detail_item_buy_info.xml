<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/linearlayout_item" android:id="@+id/goods_name"/>
            <include layout="@layout/view_break_line"/>
            <include layout="@layout/linearlayout_item" android:id="@+id/simple_explain"/>
            <include layout="@layout/view_break_line"/>
            <include layout="@layout/linearlayout_item" android:id="@+id/goods_code"/>
            <include layout="@layout/view_break_line"/>
            <include layout="@layout/linearlayout_item" android:id="@+id/count_explain"/>
            <include layout="@layout/view_break_line"/>
            <include layout="@layout/linearlayout_item" android:id="@+id/goods_size"/>
            <include layout="@layout/view_break_line"/>
            <include layout="@layout/linearlayout_item" android:id="@+id/shop_price"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>