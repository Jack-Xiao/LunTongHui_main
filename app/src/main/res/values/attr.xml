<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="cicon" format="reference"/>
    <attr name="ccolor" format="color"/>
    <attr name="ctext" format="string"/>
    <attr name="ctext_size" format="dimension"/>


    <attr name="name_color" format="color"/>
    <attr name="value_color" format="color"/>
    <attr name="name_text" format="string"/>
    <attr name="value_text" format="string"/>

    <declare-styleable name="ChangeColorIconWithText">
        <attr name="cicon" />
        <attr name="ccolor"/>
        <attr name="ctext" />
        <attr name="ctext_size"/>
    </declare-styleable>

    <declare-styleable name="UserStatusNameValue">
        <attr name="name_color"/>
        <attr name="value_color"/>
        <attr name="name_text"/>
        <attr name="value_text"/>
    </declare-styleable>


    <declare-styleable name="ContentLoaderView">
        <attr name="loadingView" format="integer|reference"/>
        <attr name="errorView" format="integer|reference"/>
        <attr name="emptyView" format="integer|reference"/>
        <attr name="inAnim" format="integer|reference"/>
        <attr name="outAnim" format="integer|reference"/>
        <attr name="android:padding"/>
        <attr name="android:paddingLeft"/>
        <attr name="android:paddingTop"/>
        <attr name="android:paddingRight"/>
        <attr name="android:paddingBottom"/>
        <attr name="android:clipToPadding"/>
    </declare-styleable>

    <declare-styleable name="slideswitch">
        <attr name="themeColor" format="color" />
        <attr name="isOpen" format="boolean" />
        <attr name="shape">
            <enum name="rect" value="1" />
            <enum name="circle" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="activity_area">
        <attr name="activity_icon" format="reference|integer"/>
        <attr name="activity_text" format="reference|integer"/>
    </declare-styleable>
    <declare-styleable name="MultiSwipeRefreshLayout">
        <attr name="foreground" format="reference"/>
    </declare-styleable>

    <declare-styleable name="PullToZoomView">
        <attr name="headerView" format="reference" />
        <attr name="footerView" format="reference"/>
        <attr name="contentView" format="reference" />
        <attr name="zoomView" format="reference" />
        <attr name="isHeaderParallax" format="boolean" />
    </declare-styleable>
</resources>